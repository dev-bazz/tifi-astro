---
import Layout from "../../layouts/Layout.astro";
import { FormContainer } from "../../components/FormContainer.jsx";
import SocialProof from "../../components/SocialProof.astro";
---

<Layout title="Tifi- Get In Touch.">
    <main>
        <section
            class="max-w-4xl w-full mx-auto p-4 text-center flex flex-col justify-center items-center gap-6 py-12"
        >
            <h1
                class="font-bold text-[#101828] text-[32px] sm:text-[48px] lg:text-[72px] font-redhat"
            >
                GET IN TOUCH
            </h1>
            <p class="text-[#344054] text-base font-noto md:text-lg lg:text-xl">
                In just 48 hours, our experts will meticulously assess your
                video content and reveal untapped opportunities for enhancing
                your
                <span class="text-[#101828] font-medium"> brand</span>

                 and visual storytelling.
            </p>
        </section>
        <section>
            <FormContainer client:only="react" />
        </section>
        <section>
            <SocialProof />
        </section>
    </main>
</Layout>
